<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:layout_height="48dp">

    <Button
        android:id="@+id/bookmark_item_delete"
        android:layout_width="44dp"
        android:layout_height="42dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_delete_black_24dp"/>

    <TextView
        android:id="@+id/bookmark_item_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:textSize="20sp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/bookmark_item_delete"
        android:gravity="center_vertical">
    </TextView>

    <TextView
        android:id="@+id/bookmark_item_title"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/bookmark_item_timestamp"
        android:textSize="20sp"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical">
    </TextView>

</RelativeLayout>